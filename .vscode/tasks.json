    "version": "2.0.0",
    "tasks": [
        {
            "label": "controller",
            "type": "shell",
            "command": "roslaunch",
            "args": [
                "${workspaceFolderBasename}",
                "controller.launch"
            ],
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "current_pose",
            "type": "shell",
            "command": "roslaunch",
            "args": [
                "${workspaceFolderBasename}",
                "current_pose.launch"
            ],
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "pick_place",
            "type": "shell",
            "command": "roslaunch",
            "args": [
                "${workspaceFolderBasename}",
                "pick_place.launch"
            ],
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "buildAndRun",
            "type": "shell",
            "command": "roslaunch",
            "args": [
                "${workspaceFolderBasename}",
                "pick_place.launch"
            ],
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "focus": true
            },
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "catkin",
            "args": [
                "build",
                "${workspaceFolderBasename}"
            ],
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "format",
            "type": "shell",
            "command": "clang-format",
            "args": [
                "-i",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/my_libs/*.cpp",
                "${workspaceFolder}/include/*.hpp"
            ],
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "build_all",
            "type": "shell",
            "command": "catkin",
            "args": [
                "build"
            ],
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "clean_all",
            "type": "shell",
            "command": "catkin",
            "args": [
                "clean"
            ],
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "focus": true
            }
        }
    ]
}